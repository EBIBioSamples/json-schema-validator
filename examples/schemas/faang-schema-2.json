{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FAANG standard schema",
  "description": "Schema based on rules found in https://www.ebi.ac.uk/vg/faang/rule_sets/FAANG%20Samples.",
 
  "type": "object",
  "properties": {
    
    "alias": {
      "description": "A sample unique identifier in a submission.",
      "type": "string"
    },
    "taxonId": {
      "description": "The taxonomy id for the sample species.",
      "type": "integer"
    },
    "taxon": {
      "description": "The taxonomy name for the sample species.",
      "type": "string"
    },
    "title": {
      "description": "A sample title.",
      "type": "string"
    },
    "releaseDate": {
      "description": "Date from which this sample is released publicly.",
      "type": "string",
      "format": "date"
    },
    "description": {
      "description": "A brief description of the sample including species name.",
      "type": "string"
    },
    "sampleRelationships": {
      "description": "List of relationships between samples.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "target": {
            "description": "Sample accession to which the sample relationship refers to.",
            "type": "string",
            "pattern": "^SAM[END][AG]?[0-9]+"
          },
          "nature": {
            "description": "Nature of the relationship between the samples.",
            "type": "string",
            "enum": ["derived from", "same as", "child of"]
          }
        },
        "required": ["target", "nature"]
      }
    },
    
    "attributes": {
      "description": "Attributes for describing a sample.",
      "type": "object",
      "properties": {
        
        "project": {
          "description": "State that the project is 'FAANG'",
          "maxItems": 1,
          "items": {
            "properties": {
              "value": {
                "const": "FAANG"
              }
            }
          }
        },
        "material": {
          "description": "The type of material being described.",
          "maxItems": 1,
          "items": {
            "properties": {
              "value": {
                "enum": [
                  "organism",
                  "specimen from organism",
                  "cell specimen",
                  "pool of specimens",
                  "cell culture",
                  "cell line"
                ]
              }
            },
            "if": {"properties": {"value": {"pattern": "^organism$"}}},
            "then": {"properties": {"terms": {"contains": {"pattern": "\\S*?OBI_0100026$"}}}},
            "else": {
              "if": {"properties": {"value": {"pattern": "^specimen from organism$"}}},
              "then":{"properties": {"terms": {"contains": {"pattern": "\\S*?OBI_0001479$"}}}},
              "else": {
                "if": {"properties": {"value": {"pattern": "^cell specimen$"}}},
                "then": {"properties": {"terms": {"contains": {"pattern": "\\S*?OBI_0001468$"}}}},
                "else": {
                  "if": {"properties": {"value": {"pattern": "^pool of specimens"}}},
                  "then": {"properties": {"terms": {"contains": {"pattern": "\\S*?OBI_0302716$"}}}},
                  "else": {
                    "if": {"properties": {"value": {"pattern": "^cell culture"}}},
                    "then": {"properties": {"terms": {"contains": {"pattern": "\\S*?OBI_0001876$"}}}},
                    "else": {
                      "properties": {"terms": {"contains": {"pattern": "\\S*?CLO_0000031$"}}}
                    }
                  }
                }
              }
            }
          }
        },
        "availability": {
          "discription": "Either a link to a web page giving information on sample availability (who to contact and if the sample is available).",
          "maxItems": 1,
          "items": {
            "properties": {
              "value": {
                "anyOf": [
                  {"format": "uri"},
                  {"pattern": "^mailto:.*$"}
                ]
              }
            }
          }
        },
        "sex":{
          "description": "Animal sex, described using any child term of PATO_0000047",
          "maxItems": 1
        },
        "birthDate": {
          "description": "Birth date, in the format YYYY-MM-DD, or YYYY-MM where only the month is known. For embryo samples record 'not applicable'.",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["YYYY-MM-DD", "YYYY-MM", "YYYY"]
              }
            }
          }
        },
        "breed": {
          "description": "Animal breed, described using the FAANG breed description guidelines (http://bit.ly/FAANGbreed).",
          "maxItems": 1
        },
        "healthStatus": {
          "description": "Healthy animals should have the term normal, otherwise use the as many disease terms as necessary from EFO."
        },
        "birthLocation": {
          "description": "Name of the birth location",
          "maxItems": 1
        },
        "birthLocationLongitude": {
          "description": "Longitude of the birth location in decimal degrees.",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["decimal degrees"]
              }
            }
          }
        },
        "birthLocationLatitude": {
          "description": "Latitude of the birth location in decimal degrees.",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["decimal degrees"]
              }
            }
          }
        },
        "birthWeight": {
          "description": "Birth weight, in kilograms or grams.",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["kilograms", "grams"]
              }
            }
          }
        },
        "placentalWeight": {
          "description": "Placental weight, in kilograms or grams.",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["kilograms", "grams"]
              }
            }
          }
        },
        "pregnancyLength": {
          "description": "Pregnancy length of time, in days, weeks or months.",
          "maxItems": 1,
          "items": {
            "properties": {
              "units": {
                "enum": ["day", "week", "month", "days", "weeks", "months"]
              }
            }
          }
        },
        "deliveryTiming": {
          "description": "Was pregancy full-term. early or delayed.",
          "maxItems": 1,
          "items": {
            "properties": {
              "value": {
                "enum": ["early parturition", "full-term parturition", "delayed parturition"]
              }
            }
          }
        },
        "deliveryEase": {
          "description": "Did the delivery require assistance.",
          "maxItems": 1,
          "items": {
            "properties": {
              "value": {
                "enum": ["normal autonomous delivery", "c-section", "veterinarian assisted"]
              }
            }
          }
        },
        "pedigree": {
          "description": "A link to pedigree information for the animal",
          "maxItems": 1,
          "items": {
            "properties": {
              "value": {
                "format": "uri"
              }
            }
          }
        }
      },
      "patternProperties": {
        "^.*$": { 
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "value": {
                "type": "string",
                "minLength": 1
              },
              "units": {"type": "string"},
              "terms": {
                "type": "array",
                "items": {
                  "type": "string",
                  "format": "uri"
                }
              }
            },
            "required": ["value"]
          }
        }
      }
    }
    
  },
  "if": {"properties": {"attributes": {"properties": {"material": {"properties": {"value": {"pattern": "^organism$"}}}}}}},
  "then": {"properties": {"attributes": {"required": ["sex", "breed"]}}},
  "else": {},
  "required": ["alias", "taxonId", "taxon"]
}